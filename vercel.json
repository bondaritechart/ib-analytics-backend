{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "npm run build && npm run prisma:deploy",
  "functions": {
    "api/index.ts": {
      "includeFiles": "src/graphql/**/*.graphql"
    }
  },
  "routes": [
    {
      "src": "/graphql",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
